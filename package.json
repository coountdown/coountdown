{
  "name": "coountdown",
  "productName": "Coountdown",
  "version": "1.1.2-canary.8",
  "description": "Coountdown for macOS",
  "main": "main/index.js",
  "repository": "https://github.com/coountdown/coountdown.git",
  "author": {
    "name": "Coountdown",
    "email": "coountdown@gmail.com"
  },
  "license": "MIT",
  "contributors": [
    "vistriter <vistriter@gmail.com>"
  ],
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "electron": "^4.0.5",
    "electron-builder": "^20.38.5",
    "eslint": "5.3.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "@sentry/node": "4.6.1",
    "app-root-path": "^2.1.0",
    "dotenv": "6.2.0",
    "electron-is-dev": "^1.0.1",
    "electron-log": "^3.0.1",
    "electron-updater": "^4.0.6",
    "electron-util": "^0.11.0",
    "fix-path": "^2.1.0",
    "menubar": "^5.2.3",
    "mixpanel": "^0.10.1",
    "moment": "^2.24.0",
    "node-machine-id": "^1.1.10",
    "semver": "^5.6.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "build": {
    "buildVersion": "0",
    "appId": "com.coountdown.app",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "main/static/icons/icon.icns",
      "target": [
        "zip"
      ],
      "extendInfo": {
        "LSUIElement": 1,
        "NSUserNotificationAlertStyle": "alert"
      }
    },
    "files": [
      "**/*"
    ]
  },
  "scripts": {
    "start": "electron .",
    "format": "prettier --write 'main/**/*.{js,json}'",
    "format-lint": "./node_modules/eslint/bin/eslint.js . --fix",
    "build": "build",
    "dist": "electron-builder --publish always"
  }
}
